<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:gravity="center_vertical"
    android:background="@android:color/transparent">

    <ImageButton
        android:id="@+id/topbar_left_image_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/image_view_content_description"
        android:layout_alignParentLeft="true"
        android:src="@drawable/back_button"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/topbar_title_text_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/topbar_title_text_view"
        android:layout_marginTop="10dp"
        android:background="@color/white"/>
</RelativeLayout><!-- From: file:/D:/AndroidStudioWorkspace/babylon-android/res/layout/view_topbar.xml -->